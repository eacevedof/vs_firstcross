<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NsFirstapp.views.ViewHomepage">
  <StackLayout>
    <Label Text="Empleados" 
           Font="24"
           HorizontalOptions="Center"
           TextColor="White"
    />
    <Entry x:Name="entNombres" Placeholder="Nombres" TextColor="White"/>
    <Entry x:Name="entApellidos" Placeholder="Apellidos" TextColor="White"/>
    <Entry x:Name="entSalary" Placeholder="Salario" Keyboard="Numeric" TextColor="White"/>
    
    <StackLayout Orientation="Horizontal">
      <Label Text="Fec. Nacimiento" Font="14" VerticalOptions="Center"/>
      <DatePicker x:Name="datBirthdate"/>      
      <Label Text="Active" TextColor="White" VerticalOptions="Center"/>
      <Switch x:Name="swActive" IsToggled="True" VerticalOptions="Center"/>
    </StackLayout>
  </StackLayout>

</ContentPage>